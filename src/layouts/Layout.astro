---
import i18n from "i18next";
---

<!doctype html>
<html
    lang={i18n.language ?? "es"}
    class="bg-[#0EB8B8] scroll-smooth antialiased"
>
    <head>
        <meta charset="UTF-8" />
        <base href="/" />

        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />

        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="alternate icon" href="/favicon.ico" />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />

        <!-- Título y descripción -->
        <title id="site-title">{i18n.t("title_page")}</title>
        <meta
            name="description"
            content={i18n.t("meta_description") ||
                "Portafolio web de John Chicaiza, desarrollador frontend y backend."}
        />
        <meta name="robots" content="index, follow" />

        <!-- Generador -->
        <meta name="generator" content={Astro.generator ?? "Astro 5"} />

        <!-- Open Graph (para WhatsApp, LinkedIn, Facebook, etc.) -->
        <meta property="og:title" content={i18n.t("title_page")} />
        <meta
            property="og:description"
            content={i18n.t("meta_description") ||
                "Portafolio web de John Chicaiza, desarrollador frontend y backend."}
        />
        <meta property="og:image" content="/redes.webp" />
        <meta property="og:type" content="website" />
        <meta
            property="og:url"
            content="https://portfolio-john-chicaiza.netlify.app/"
        />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={i18n.t("title_page")} />
        <meta
            name="twitter:description"
            content={i18n.t("meta_description") ||
                "Portafolio web de John Chicaiza, desarrollador frontend y backend."}
        />
        <meta name="twitter:image" content="/redes.webp" />

        <!-- Fuente y rendimiento -->
        <link
            rel="preconnect"
            href="https://fonts.googleapis.com"
            crossorigin
        />
        <link
            rel="preload"
            as="style"
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
        />
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
            media="all"
        />

        <!-- Tema para navegadores móviles -->
        <meta name="theme-color" content="#0EB8B8" />
    </head>

    <body
        class="text-gray-900 dark:text-white bg-white dark:bg-[#0D1B1E]"
        aria-labelledby="site-title"
    >
        <!-- Accesibilidad: salto al contenido -->
        <a
            href="#main-content"
            class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black p-2 z-50 rounded shadow"
        >
            Saltar al contenido principal
        </a>

        <main id="main-content">
            <slot />
        </main>
    </body>
</html>
